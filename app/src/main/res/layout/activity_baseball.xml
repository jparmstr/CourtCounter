<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--Table Layout for scoreboard-->
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <!--First row that shows Inning Numbers-->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--Blank TextView above team names-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="" />

            <TextView
                android:id="@+id/inningLabel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/inningLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="2"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/inningLabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="3"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/inningLabel4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="4"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/inningLabel5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="5"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/inningLabel6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="6"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/inningLabel7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="7"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/inningLabel8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="8"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/inningLabel9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="9"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/total_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="Total"
                android:textAlignment="center" />
        </TableRow>

        <!--Second row that shows Team A scores-->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/baseball_team_a_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:padding="8dp"
                android:text="Team A"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/baseball_team_a_inning_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectangle_red"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/baseball_team_a_inning_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectangle_gray"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/baseball_team_a_inning_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectangle_gray"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/baseball_team_a_inning_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectangle_gray"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/baseball_team_a_inning_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectangle_gray"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/baseball_team_a_inning_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectangle_gray"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/baseball_team_a_inning_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectangle_gray"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/baseball_team_a_inning_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectangle_gray"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/baseball_team_a_inning_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectangle_gray"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/baseball_team_a_total_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/rectangle_gray"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center" />
        </TableRow>

        <!--Third row that shows Team B scores-->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/baseball_team_b_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:padding="8dp"
                android:text="Team B"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/baseball_team_b_inning_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectangle_gray"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/baseball_team_b_inning_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectangle_gray"
                android:padding="8dp"
