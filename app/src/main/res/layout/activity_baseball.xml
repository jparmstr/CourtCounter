            <TextView
                android:id="@+id/baseball_team_b_inning_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectangle_gray"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/baseball_team_b_inning_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectangle_gray"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/baseball_team_b_inning_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectangle_gray"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/baseball_team_b_inning_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectangle_gray"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/baseball_team_b_inning_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectangle_gray"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/baseball_team_b_inning_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectangle_gray"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/baseball_team_b_total_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/rectangle_gray"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center" />
        </TableRow>

    </TableLayout>

    <!--Horizontal Layout for Ball, Strike, Out-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!--Vertical Layout for Balls-->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balls:" />

            <TextView
                android:id="@+id/baseball_balls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_gray"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center" />

        </LinearLayout>

        <!--Vertical Layout for Strikes-->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strikes:" />


            <TextView
                android:id="@+id/baseball_strikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_gray"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center" />

        </LinearLayout>

        <!--Vertical Layout for Outs-->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outs:" />

            <TextView
                android:id="@+id/baseball_outs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_gray"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical">
        <!--Buttons for Ball, Strike, Hit, Score Run, and Out-->
        <Button
            android:id="@+id/ball_button"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="8dp"
            android:background="@color/colorPrimary_baseball"
            android:onClick="ball"
            android:text="Ball"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/strike_button"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="8dp"
            android:background="@color/colorPrimary_baseball"
            android:onClick="strike"
            android:text="Strike"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/hit_button"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="8dp"
            android:background="@color/colorPrimary_baseball"
            android:onClick="hit"
            android:text="Hit"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/score_button"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="8dp"
            android:background="@color/colorPrimary_baseball"
            android:onClick="scoreRun"
            android:text="Score Run"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/out_button"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="8dp"
            android:background="@color/colorPrimary_baseball"
            android:onClick="out"
            android:text="Player Out"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>
